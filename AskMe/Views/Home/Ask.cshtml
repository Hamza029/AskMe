
@{
	ViewBag.Title = "Ask";
}

<h2>Ask something you are curious about!</h2>

@using (Html.BeginForm("Ask", "Home", FormMethod.Post))
{
	@Html.AntiForgeryToken()

<form>

	<div class="form-group">
		<label for="Category">Category</label>
		<select name="CategoryId" class="form-control" id="">
			@if (ViewBag.categoryList != null)
			{
				foreach (var category in ViewBag.categoryList)
				{
					<option value="@category.CategoryId">@category.CategoryName</option>
				}
			}
		</select>
	</div>

	<div class="form-group">
		<label for="Title">Title</label>
		<textarea required name="Title" class="form-control" id="" rows="5"></textarea>
	</div>

	<div class="form-group">
		<label for="Content">Content</label>
		<textarea required name="Content" class="form-control" id="" rows="5"></textarea>
	</div>

	<div class="form-check">
		<input name="QStatus" class="form-check-input" type="checkbox" value="1" id="flexCheckDefault">
		<label class="form-check-label" for="QStatus">
			Make it public
		</label>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Submit" class="btn btn-success" />
		</div>
	</div>

</form>

}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

